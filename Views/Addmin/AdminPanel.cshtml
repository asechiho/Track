@section scripts{
    <script>
        $(window).load(function() {
            $("#home").addClass("active");

            $.ajax({
                type: "GET",
                url: "../Home/GetCountItemBasket",
                success: function (data) {
                    var count = data;
                    $("#countBasket").text(count);
                }
            });

        });
    </script>
}
